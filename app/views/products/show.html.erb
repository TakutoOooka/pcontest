<div id="tf-portfolio">
    <div class="container">
        <div class="section-title">
            <h3><%= @product.product_name %></h3>
        </div>

        <div class="space"></div>
		<div class="row toppadding">
            <div class="col-md-12">
	            <a href="/products/<%=@product.id%>">
					<canvas id="canvas0" width="320px" height="320px"">
					<%=@product.source_code%>
					</canvas>
				</a>
				<%= button_tag type: 'button', onclick: "runByCanvasText(0)", class: "btn btn-primary my-btn dark" do %>Run<% end %>
				<%= button_tag type: 'button', onclick: "stop(0)", class: "btn btn-primary my-btn dark" do %>Stop<% end %>
            </div>
        </div>

		<% if current_user.id == @product.user.id %>
			<div class="row toppadding">
	        	<div class="col-md-2">
	        	<%= link_to '/products/'+@product.id.to_s(10)+'/destroy', method: :delete do %>
					<h4>この作品を削除する</h4>
				<% end %>
	        	</div>

	        	<div class="col-md-2">
	        	<%= link_to '/products/'+@product.id.to_s(10)+'/edit', method: :get do %>
					<h4>編集する</h4>
				<% end %>
	        	</div>
	        </div>
		<% end %>   

		<% unless current_user.reviews.find_by(product_id: @product.id) %>
		    <%= form_tag('/reviews/'+@product.id.to_s(10)+'/create', method: :post) do %>
			    <h3>評価する</h3>
			    <input placeholder="ProductName" type="text" name="product_name">
			    <p>星</p>
			    <textarea cols="30" name="review" placeholder="text" rows="10"></textarea>
			    <input type="submit" value="SENT">
			<% end %>
		<% end %>     

    </div>
</div>