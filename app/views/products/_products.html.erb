<% i = 0 %>
<div class="space"></div>
<% @products.each do |product| %>
	<div class="row toppadding">
        <div class="col-md-12">
            <a href="/products/<%=product.id%>">
				<canvas id="canvas<%=i%>" width="320px" height="320px"">
				<%=product.source_code%>
				</canvas>
			</a>
			<%= button_tag type: 'button', onclick: "runByCanvasText(#{i})", class: "btn btn-primary my-btn dark" do %>Run<% end %>
			<%= button_tag type: 'button', onclick: "stop(#{i})", class: "btn btn-primary my-btn dark" do %>Stop<% end %>
        </div>
		<% i += 1 %>
    </div>
<% end %>
<%= paginate(@products) %>